/*
INPUT player 1's name //done
INPUT player 2's name //done
INPUT number of games to play //done

SET game count to 0
SET players' scores to 0

WHILE game count < number of games to play//done
 Add 1 to game count//done
 OUTPUT game count//done

 Setup the piles with random numbers of counters/mnot done
 OUTPUT the state of the piles//not done
 
 Pick a player to go first//done

 WHILE game has not been won AND counters remain//not done
  OUTPUT player name

  INPUT pile to take from
  INPUT number of counters to take

  Remove counters from appropriate pile
  OUTPUT the state of the piles

  IF no counters are left in the piles THEN
   OUTPUT winning message
   Add 1 to player's score
   End this particular game
  ELSE
   Switch to the other player
  ENDIF
 ENDWHILE

 OUTPUT players' scores
ENDWHILE

IF a player won THEN
 OUTPUT winner's name
ELSE
 OUTPUT draw message
ENDIF
*/

import java.util.Random;
import java.util.Scanner;

public static pseudoVersion{
  public static void main(String [] args){
  int gamesWanted = 0 ; 
  int pickedUser = 0 ;
  int gameCount = 0 ;
  int player1Score = 0 ;
  int player2Score = 0 ;  
  int max = 2;
  int min = 1;  
  int pileMin = 1;
  int pileMax = 5;

  
  String player1 ="" ;
  System.out.println("Player 1 enter your name: ");
  player1 = keyboard.nextLine;
  
  String player2 = "";
  System.out.println("PLayer 2 enter your name: ")
  player2 = keyboard.nextLine;
  
    
  System.out.println("How many games would you like to play: ");
  gamesWanted = keyboard.nextline;
  
  
  
  
  //Set game count and player score to 0

  
  //Make and display the piles
  System.out.println("5 piles have been randomly generated");
  
  System.out.println("1:"pile0);
  System.out.println("2:"pile1);
  System.out.println("3:"pile2);
  System.out.println("4:"pile3);
  System.out.println("5:"pile4);
  
  do{


    if(pickedUser == 1){
      System.out.println(player1 + "will start ");
    }else if(pickedUser == 2){
      System.out.println(player2 +" will start");
    }else{
      System.out.println("An error occured please restart the program.");
    }//else if stack
   
    System.out.println("First enter the pile you want to choose");
    System.out.println("then pick the number of ");
    
    
    
    for(int gameCount =0; gameCount<gamesWanted.length;gameCount++){
      System.out.println("You are up to game" +gameCount);
    }//for loop
  }while(gameCount < gamesWanted );//do while loop

  //See who wins
  if(player1Score<player2Score){
   System.out.println(player1+ " has won the game with " +player1Score " points")
  }else if(player2Score<player1Score){
   System.out.println(player2+ " has won the game with " +player2Score " points")
  }else if(player1Score == player2Score){ 
   System.out.println("It's a draw both "+player1" and "+player2" have the same score");
  }else{
    System.out.println("An error occured please contact your system admin."); 
  }
  
  
  }//main
  public static int [] pile0(){
    Random rand = new Random();
    int [] pile0 = new int [2+1]
    int [] pile0 = rand.nextInt((pileMax-pileMin)+1)+pileMin   
  }
    public static int [] pile1(){
    Random rand = new Random();
    int [] pile1 = new int [2+1]
    int [] pile1 = rand.nextInt((pileMax-pileMin)+1)+pileMin   
  }
    public static int [] pile2(){
    Random rand = new Random();
    int [] pile2 = new int [2+1]
    int [] pile2 = rand.nextInt((pileMax-pileMin)+1)+pileMin   
  }
    public static int [] pile3(){
    Random rand = new Random();
    int [] pile3 = new int [2+1]
    int [] pile3 = rand.nextInt((pileMax-pileMin)+1)+pileMin   
  }
    public static int [] pile4(){
    Random rand = new Random();
    int [] pile4 = new int [2+1]
    int [] pile4 = rand.nextInt((pileMax-pileMin)+1)+pileMin   
  }
    
    public static int pickedUser(){
      Random rand = new Random();
      int pickedUser = rand.nextInt((max-min)+1)+min;
  }//pickedUser Method
  
    public static int readInt(String prompt){
      int userInput =0;
        System.out.println(prompt);
        try{
             Scanner keyboard = new Scanner(System.in);
             userInput = keyboard.nextInt();
        }catch(Exception e){
             System.out.println("Caught error - not an integer");
        }
        return userInput;
    }//end readInt Method
    
    
    public static String readString(String prompt){
        System.out.println(prompt);
        Scanner keyboard = new Scanner(System.in);
        return keyboard.nextLine();
    }//end readString Method
  
}//class
